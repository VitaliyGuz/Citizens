<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="~/Scripts/jquery-2.1.3.min.js"></script>
    <script src="~/Scripts/knockout-3.3.0.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/css/font-awesome.min.css" rel="stylesheet" />
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/angular-resource.min.js"></script>
    <script src="~/Scripts/angular-route.min.js"></script>
    <script src="~/Scripts/Citizen/appCitizen.js"></script>
    <script src="~/Scripts/AngularUtils/directives/dirPagination.js"></script>
    <title>@ViewBag.Title</title>
    @RenderSection("Scripts", false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-static-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Citizens", "Index", "People", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">                    
                    <li>@Html.ActionLink("Дільниці", "Index", "Precincts", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Вулиці", "Streets", "Home", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Населені пункти", "Index", "City", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Райони", "Index", "RegionPart", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Завантаження з Excel", "Upload", "Home", new { area = "" }, null)</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>            
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>
</body>
</html>
