<h3>Фізична особа</h3>   
<h5 ng-show="loading">Завантаження... <i class="fa fa-refresh fa-spin"></i></h5>
<hr/>
<form ng-submit="save()">
    <div class="form-horizontal">
        <div class="form-group col-lg-3">
            <label>Прізвище</label>
            <input ng-model="person.LastName" type="text" class="form-control" required>
        </div>
        <div class="form-group col-lg-3">
            <label>Ім'я</label>
            <input ng-model="person.FirstName" type="text" class="form-control" required>
        </div>
        <div class="form-group col-lg-4">
            <label>По-батькові</label>
            <input ng-model="person.MidleName" type="text" class="form-control" required>
        </div>
        <div class="form-group col-lg-2">
            <label>Дата народження</label>
            <input ng-model="dateOfBirth" type="date" class="form-control" required>
        </div>
        <div class="form-group col-lg-1">
            <label>Стать</label>
            <select class="form-control" ng-model="person.Gender" required>
                <option value='' disabled>-Виберіть-</option>
                <option value="ж">ж.</option>
                <option value="ч">ч.</option>
            </select>
        </div>      
    </div>
    <div class="form-horizontal">
        <div class="form-group col-lg-4">
            <label>Населений пункт</label>
            @*<select class="form-control" ng-options="c.Id as c.CityType.Name+' '+c.Name for c in cities"
                    ng-model="person.CityId" required>
                <option value='' disabled>-Виберіть-</option>
            </select>*@
            <input type="text" ng-change="person.CityId=0" typeahead-on-select="onSelectCity($item, $model, $label)" ng-model="person.City" typeahead="c.Id as c.CityType.Name +' '+c.Name + ' (' + c.RegionPart.Name + ' р-н)' for c in cities | filter: $viewValue| limitTo:10" class="form-control" required>
        </div>
        <div class="form-group col-lg-4">
            <label>Вулиця</label>
            @*<select class="form-control" ng-options="s.Id as s.StreetType.Name+' '+s.Name for s in streets"
                    ng-model="person.StreetId" required>
                <option value='' disabled>-Вулиця-</option>
            </select>*@
            <input type="text" ng-change="person.StreetId=0" typeahead-on-select="onSelectStreet($item, $model, $label)" ng-model="person.Street" typeahead="s.Id as s.StreetType.Name +' '+ s.Name for s in streets | filter: $viewValue| limitTo:10" class="form-control" required>
        </div>
        <div class="form-group col-lg-2">
            <label>Будинок</label>
            <input ng-model="person.House" type="text" class="form-control" required>
        </div>
        <div class="form-group col-lg-1">
            <label>Кв.</label>
            <input ng-model="person.Apartment" type="text" class="form-control">
        </div>
        <div class="form-group col-lg-2">
            <label>Дільниця</label>
            @*<input ng-model="person.PrecinctId" type="text" class="form-control" required>*@
            <input type="text" typeahead-on-select="onSelectPrecinctNumber($item, $model, $label)" ng-model="person.PrecinctId" typeahead="p.Id as p.Id for p in precincts | filter: $viewValue| limitTo:10" class="form-control" required>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <button type="submit" class="btn btn-sm btn-success" title="Зберегти зміни">
                <span class="glyphicon glyphicon-save"></span> Зберегти
                <i ng-show="saving" class="fa fa-refresh fa-spin"></i>
            </button>
            <button type="button" class="btn btn-sm btn-success" ng-click="backToList()" title="Повернутися до списку фізичних осіб">
                <span class="glyphicon glyphicon-backward"></span> Завершити
            </button>
        </div>
    </div>
</form>
